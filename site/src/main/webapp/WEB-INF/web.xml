<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>hyperscala-examples-basic</display-name>
    <servlet>
        <servlet-name>RenderServlet</servlet-name>
        <servlet-class>org.hyperscala.web.RenderServlet</servlet-class>
        <init-param>
            <param-name>website</param-name>
            <param-value>org.hyperscala.site.HyperscalaSite</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>RenderServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>